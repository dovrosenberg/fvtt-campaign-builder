{{! Requires:
      WBHeaderData: {
        tabs: WindowTab[] 
        bookmarks: Bookmark[]
        collapsed: boolean
        canBack: boolean
        canForward: boolean
      }
}}
<header class="fwb-header flexcol">
  <div class="fwb-tab-bar flexrow">
    <div class="fwb-tab-row flexrow">
      {{#each tabs}}
        <div class="fwb-tab flexrow {{#if active}}active{{/if}}" title="{{entry.name}}" data-tab-id="{{id}}">
          {{#if entry.icon}}<div class="fwb-tab-icon"><i class="fas {{ entry.icon }}"></i></div>{{/if}}
          <div class="tab-content">{{entry.name}}</div>
          <div class="close"><i class="fas fa-times"></i></div>
        </div>
      {{/each}}

      <div id="fwb-add-tab" class="tab-button"><i class="fas fa-plus"></i></div>
    </div>

    <div id="fwb-sidebar-toggle" class="tab-button" data-tooltip="{{#if collapsed}}{{localize 'fwb.tooltips.expandDirectory'}}{{else}}{{localize 'fwb.tooltips.collapseDirectory'}}{{/if}}">
      <i class="fas {{#if collapsed}}fa-caret-left{{else}}fa-caret-right{{/if}}"></i>
    </div>
  </div>

  <div class="fwb-bookmark-bar flexrow">
    <div id="fwb-add-bookmark" title="{{localize 'fwb.tooltips.addBookmark'}}" {{#if disableAddBookmark}}class="disabled"{{/if}}><i class="fas fa-star"></i></div>

    {{#each bookmarks}}
      <div class="fwb-bookmark-button" title="{{entry.name}}" data-bookmark-id="{{id}}"><div><i class="fas {{entry.icon}}"></i> {{entry.name}}</div></div>
    {{/each}}
  </div>

  <div class="navigation flexrow">
    <div id="fwb-history-back" class="nav-button {{#unless canBack}} disabled{{/unless}}" title="{{localize 'fwb.tooltips.historyBack'}}">
      <i class="fas fa-chevron-left"></i>
    </div>
    <div id="fwb-history-forward" class="nav-button {{#unless canForward}} disabled{{/unless}}" title="{{localize 'fwb.tooltips.historyForward'}}">
      <i class="fas fa-chevron-right"></i>
    </div>
    <hr class="vertical" />
    <div class="button-group flexrow" id="journal-buttons"></div>
  </div>
</header>
